<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= error %>
  <% end %>
<% end %>


<%= form_for [@destination, @hack] do |f| %>
    <div>
      <%= f.label :category %>
      <%= f.select(:category, @categories) %>
    </div>
      <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :content %>
      <%= f.text_area :content %>
    </div>
    <div>
      <%= f.hidden_field :user_id, :value => @user.id %>
      <% if !@hack.id %>
        <%= f.hidden_field :destination_id, :value => @destination.id %>
      <% end %>
    </div>
      
    <%= f.submit class: "btn btn-outline-success btn-sm"%>
  <% end %>






