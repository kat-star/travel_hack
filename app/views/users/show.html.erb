<h1><%= @user.username %></h1>
<%= @user.name %>
<br>
<%= @user.location %>
<br>
<%= @user.bio %>
<br>
<%= "Age: #{@user.age}" %>
<br>

<% if logged_in? && current_user == @user %>
  <%= link_to "Edit Profile", edit_user_path %>
<% end %>

<% @user.destinations.each do |destination| %>
  <h3><%= destination.str_addr_fields %></h3>
        <% destination.hacks.each do |hack|%>
            <p><%= hack.content %></p>
        <% end %>
<% end %>

